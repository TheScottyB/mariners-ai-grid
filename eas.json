{
  "$schema": "https://eas.expo.dev/schema/eas.json",
  "cli": {
    "version": ">= 16.28.0",
    "appVersionSource": "remote",
    "requireCommit": true
  },
  "build": {
    "base": {
      "env": {}
    },
    "development": {
      "extends": "base",
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": true
      }
    },
    "preview": {
      "extends": "base",
      "developmentClient": true,
      "distribution": "internal",
      "channel": "preview",
      "ios": {
        "simulator": false
      }
    },
    "production": {
      "extends": "base",
      "autoIncrement": true,
      "channel": "production",
      "env": {
        "EXPO_USE_METRO_MINIFY_TERSER": "true"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "beilsco@gmail.com",
        "ascAppId": "to-be-configured",
        "appleTeamId": "to-be-configured"
      },
      "android": {
        "serviceAccountKeyPath": "to-be-configured"
      }
    }
  }
}
